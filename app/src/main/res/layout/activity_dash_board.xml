<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DashBoardActivity">

    <TextView
        android:layout_marginStart="10sp"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="20sp"
        android:text="How to Use"
        android:textSize="20sp">
    </TextView>

    <TextView
        android:layout_marginStart="50sp"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:text="Step:1 Enable keyboard:"
        android:textSize="14sp">
    </TextView>

    <TextView
        android:layout_marginStart="50sp"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:text="Step:2 Select keyboard:"
        android:textSize="14sp">
    </TextView>

    <TextView
        android:layout_marginStart="50sp"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:text="Step:3 Select Theme:"
        android:textSize="14sp">
    </TextView>

    <Button
        android:id="@+id/btnEnable"
        android:layout_width="256dp"
        android:layout_height="73dp"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="13sp"
        android:background="@drawable/roundedcorners"
        android:text="Enable Keyboard"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnSelect"
        android:layout_width="256dp"
        android:layout_height="73dp"
        android:enabled="false"
        android:background="@drawable/roundedcorners"
        android:text="Select Keyboard"
        android:textAlignment="center"
        android:layout_marginTop="29sp"
        android:layout_marginLeft="50sp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnThemes"
        android:layout_width="256dp"
        android:layout_height="73dp"
        android:background="@drawable/roundedcorners"
        android:text="Themes"
        android:textAlignment="center"
        android:layout_marginTop="33sp"
        android:layout_marginLeft="50sp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="260dp"
        android:layout_height="73dp"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="40sp"
        android:background="@drawable/roundedcorners"
        android:text="Settings"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <RelativeLayout
android:id="@+id/ad_layout"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="30px"
android:layout_alignParentBottom="true"
android:layout_centerHorizontal="true"
android:background="@drawable/adsbr">

        <com.applovin.mediation.ads.MaxAdView
            xmlns:maxads="http://schemas.applovin.com/android/1.0"
            maxads:adUnitId="applovinBannerIDBashBoard"
            android:id="@+id/bannerDashBoard"
            android:background="@color/blue"
            android:layout_height="50dp"
            android:visibility="gone"
            android:layout_width="match_parent" />

<LinearLayout
    android:id="@+id/banner_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2.0dip"

    android:orientation="vertical" />
</RelativeLayout>

</LinearLayout>



